= stylesheet_link_tag 'rails_admin/medium-editor'
= javascript_include_tag 'rails_admin/medium-editor'

ruby:
  js_data = {
    csspath: field.css_location,
    jspath: field.js_location,
    config_options: field.config_options.to_json
  }

= form.text_area field.html_method, field.html_attributes.reverse_merge(data: { richtext: 'medium-editor', options: js_data.to_json }).reverse_merge({ value: field.form_value[:html] })
