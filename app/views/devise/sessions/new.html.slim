.device-background
.devise-box
  .white-box
    .header-box
      h2.title = I18n.t("shared.enter_site")
    = simple_form_for(resource, as: resource_name, url: user_session_path) do |f|
      / = devise_error_messages!

      .form-group
        / .form-control = f.email_field :email, autofocus: true, title: I18n.t("shared.email"), placeholder: I18n.t("shared.email")
        /= f.input :email, as: :email, autofocus: true, title: I18n.t("shared.email"), label: I18n.t("shared.email"), wrapper_html: {class: "form-control"}
        /= f.label :email, I18n.t("shared.email")
        = f.input :email, label: false, wrapper_html: {class: "form-control #{"opened" unless resource.email.blank?}".strip} do
          = f.input_field :email, autofocus: true, title: I18n.t("shared.email"), autocomplete: "off"
          = f.label :email, I18n.t("shared.email")
      .form-group
        / .form-control = f.password_field :password, autocomplete: "off", title: I18n.t("shared.password"), placeholder: I18n.t("shared.password")
        /= f.input :password, as: :password, autocomplete: 'off', title: I18n.t("shared.password"), label: I18n.t("shared.password"), wrapper_html: {class: "form-control"}
        /= f.label :password, title: I18n.t("shared.password")
        = f.input :password, label: false, wrapper_html: {class: "form-control"} do
          = f.input_field :password, autofocus: true, title: I18n.t("shared.password"), autocomplete: "off"
          = f.label :password, I18n.t("shared.password")

      .form-group.links
        - if devise_mapping.rememberable?
          - label = content_tag(:span, "") + I18n.t("shared.remember_me")
          = f.input :remember_me, as: :boolean, title: I18n.t("shared.remember_me"), label: label, wrapper_html: {class: "checkbox-primary"}
        .link-to-recover
          = render "devise/shared/links"

      .actions
        - if Hancock.config.admin_enter_captcha and (!Rails.env.development? or Hancock.config.captcha_on_development)
          - if Hancock.config.recaptcha_support
            - unless @recaptcha_error.blank?
              h4.error.g-recaptcha-error= @recaptcha_error
            = recaptcha_tags
          - elsif Hancock.config.simple_captcha_support
            = f.input :captcha, as: :simple_captcha, label: false

        = f.submit I18n.t("shared.enter")

  .hancock-cms-link
    = link_to "Hancock v.#{Hancock::VERSION}", "https://github.com/red-rocks/hancock_cms", title: "Hancock", target: "_blank"
    span = " Â© 2016-#{Time.new.year}"
    
