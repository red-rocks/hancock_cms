@import 'compass'
@import 'hancock/cms'

@import "hancock/toplink/toplink"

*
  vertical-align: baseline
  font-weight: inherit
  font-family: inherit
  font-style: inherit
  outline: 0
  padding: 0
  margin: 0
  box-sizing: border-box
  &:focus
    outline: none

input
  padding: 5px 10px
  margin: 5px

html, body
  padding: 0
  margin: 0
  height: 100%
  font-family: "Helvetica","Arial", sans-serif
  font-size: 14px
  font-weight: 400
  line-height: 20px

html
  font-size: 1em

body
  font-size: 100%
  overflow-x: hidden

a img, :link img, :visited img
  border: 0

a
  text-decoration: none
  outline: none

#header
  width: 100%
  height: 100px
  padding: 10px 25px 10px 25px

#main-nav
  float: right
  ul
    list-style: none
    li
      display: inline-block
      margin: 10px

#root
  width: 100%
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -80px
  &::after
    content: ""
    display: block
    height: 80px

#content
  width: 100%
  padding: 25px

#footer
  width: 100%
  height: 80px
  padding: 10px 25px 10px 25px
  text-align: center

.cf:before, .cf:after
  content: "."
  display: block
  height: 0
  overflow: hidden
.cf:after
  clear: both
.cf
  zoom: 1
  clear: both
